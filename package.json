{
  "name": "gyouyomi",
  "displayName": "gyouyomi",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gyouyomi.talk",
        "title": "現在の行を読み上げ",
        "category": "tts"
      },
      {
        "command": "gyouyomi.getLibraryList",
        "title": "使えるttsライブラリを取得",
        "category": "tts"
      }
    ],
    "configuration": [
      {
        "title": "gyouyomi",
        "properties": {
          "gyouyomi.servicePortNumber": {
            "type": "integer",
            "default": 5001,
            "description": "ttsサーバーで使用するポート番号、通常は変更不要"
          },
          "gyouyomi.defaultLibraryName": {
            "type": "string",
            "default": "ついな",
            "description": "デフォルトで読み上げに使うttsライブラリのプリセット名"
          },
          "gyouyomi.defaultSavePath": {
            "type": "string",
            "default": "./tts",
            "description": "音声録音時の.wavファイル出力先 デフォルトではtts配下"
          },
          "gyouyomi.availableEngines": {
            "type": "array",
            "description": "使用可能なttsのリスト"
          }
        }
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.63.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "grpc_tools_node_protoc_ts": "^5.3.2",
    "grpc-tools": "^1.11.2",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.4.5",
    "google-protobuf": "^3.19.1"
  }
}
